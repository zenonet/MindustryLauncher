<Window x:Class="MindustryLauncher.NewInstanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Create new Instance" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="50">
            <StackPanel Orientation="Horizontal">
                <Label HorizontalAlignment="Left">Instance Name:</Label>
                <Label Name="InstanceNameErrorMessage" HorizontalAlignment="Left" Foreground="Red"></Label>
            </StackPanel>
            <TextBox Name="InstanceName" Width="200" Height="20" HorizontalAlignment="Left"></TextBox>
            <Label HorizontalAlignment="Left" Margin="0, 20, 0, 0">Version:</Label>
            <ComboBox Name="VersionDropDown" Width="200" HorizontalAlignment="Left"></ComboBox>

            <Button Name="CreateButton" Margin="0, 20, 0, 0" Width="50" HorizontalAlignment="Left">Create</Button>
        </StackPanel>
    </Grid>
</Window>
